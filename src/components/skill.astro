---
import { Icon } from "astro-icon";
interface Props {
  text: string;
  logo: string;
}
const { text, logo } = Astro.props;
---

<li class="flex items-center gap-4">
  <span
    class="w-12 h-12 flex items-center justify-center border-t border-slate-700 bg-slate-800 rounded-full"
    ><Icon name={logo} class="w-6" />
  </span>
  <span class="text-slate-600">{text}</span>
</li>
