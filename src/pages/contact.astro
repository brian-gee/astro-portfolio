---
import { Icon } from "astro-icon";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Button from "@components/ui/button.astro";
import Contactform from "@components/contactform.astro";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc">
        Get in touch so we can design something great.
      </Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800">Contact Brian</h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          Interested in working together? Fill out the form below with some info
          about your project and I will get back to you as soon as I can. Please
          allow a couple days for me to respond.
        </p>
      </div>
    </div>
  </Container>
  <div>
    <Contactform />
  </div>
</Layout>
